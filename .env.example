# SnowRail Environment Configuration
# Copy to .env and configure

# =============================================================================
# API SERVER
# =============================================================================
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000

# =============================================================================
# BLOCKCHAIN (Avalanche)
# =============================================================================
CHAIN=avalanche-fuji
AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
PRIVATE_KEY=your_private_key_here
SNOWTRACE_API_KEY=your_snowtrace_api_key

# Contract Addresses (update after deployment)
TREASURY_ADDRESS=0x...
MIXER_ADDRESS=0x...
USDC_ADDRESS=0x5425890298aed601595a70AB815c96711a31Bc65

# =============================================================================
# SENTINEL (Trust Layer)
# =============================================================================
SENTINEL_MIN_SCORE=60
SENTINEL_CACHE=true
SENTINEL_CACHE_TTL=300000
SENTINEL_RATE_LIMIT=100

# =============================================================================
# X402 (Payment Facilitator)
# =============================================================================
# USDC Config per chain (defaults provided in code)
# X402_TIMEOUT=300000

# =============================================================================
# LLM PROVIDERS (YUKI)
# Priority: ANTHROPIC_API_KEY > OPENAI_API_KEY > Mock mode
# =============================================================================
# Option 1: Anthropic Claude (recommended)
ANTHROPIC_API_KEY=sk-ant-...

# Option 2: OpenAI
# OPENAI_API_KEY=sk-...

# LLM Configuration
YUKI_PROVIDER=anthropic
YUKI_MODEL=claude-sonnet-4-20250514

# =============================================================================
# DATABASE (Optional - for persistence)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/snowrail
# REDIS_URL=redis://localhost:6379
