# SnowRail Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# BLOCKCHAIN
# =============================================================================
AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
AVALANCHE_MAINNET_RPC=https://api.avax.network/ext/bc/C/rpc
PRIVATE_KEY=your_private_key_here
SNOWTRACE_API_KEY=your_snowtrace_api_key

# Contract Addresses (Fuji Testnet)
TREASURY_CONTRACT=0x...
MIXER_CONTRACT=0x...
USDC_CONTRACT=0x...

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/snowrail
REDIS_URL=redis://localhost:6379

# =============================================================================
# STORAGE
# =============================================================================
ARWEAVE_JWK=your_arweave_jwk_json
ARWEAVE_ADDRESS=your_arweave_address

# =============================================================================
# AI / LLM (for YUKI)
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview

# =============================================================================
# SENTINEL
# =============================================================================
SENTINEL_CACHE_TTL=300000
SENTINEL_MIN_SCORE=60
SENTINEL_RATE_LIMIT=100

# =============================================================================
# FIAT PROVIDERS (Optional)
# =============================================================================
RAIL_API_KEY=your_rail_api_key
RAIL_SECRET=your_rail_secret
STRIPE_SECRET_KEY=sk_test_...

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# =============================================================================
# AUTH (Optional)
# =============================================================================
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=
LOG_LEVEL=debug
