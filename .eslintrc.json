{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended"],
  "globals": {
    "RequestInit": "readonly",
    "Response": "readonly",
    "fetch": "readonly",
    "AbortController": "readonly",
    "AbortSignal": "readonly"
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "no-console": "off",
    "semi": "off",
    "quotes": "off",
    "no-unreachable": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "*.js",
    "*.d.ts",
    "*.config.js"
  ]
}
