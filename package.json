{
  "name": "snowrail",
  "version": "2.0.0",
  "private": true,
  "description": "SnowRail - Autonomous Treasury Orchestrator with YUKI AI Assistant & SENTINEL Trust Layer",
  "author": "Colombia Blockchain <team@snowrail.xyz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Colombia-Blockchain/SnowRail"
  },
  "keywords": [
    "x402",
    "erc-8004",
    "avalanche",
    "ai-agents",
    "treasury",
    "payments",
    "zero-knowledge",
    "sentinel",
    "yuki"
  ],
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "sentinel:test": "turbo run test --filter=@snowrail/sentinel",
    "yuki:dev": "turbo run dev --filter=@snowrail/yuki",
    "frontend:dev": "turbo run dev --filter=@snowrail/frontend",
    "backend:dev": "turbo run dev --filter=@snowrail/backend",
    "contracts:compile": "hardhat compile",
    "contracts:test": "NODE_OPTIONS='--import tsx' hardhat test",
    "contracts:deploy": "hardhat run scripts/deploy.ts --network fuji",
    "contracts:deploy:usdc": "hardhat run scripts/deploy-usdc.ts --network fuji",
    "contracts:deploy:treasury": "hardhat run scripts/deploy-treasury.ts --network fuji",
    "contracts:setup:roles": "hardhat run scripts/setup-roles.ts --network fuji",
    "contracts:verify": "hardhat verify --network fuji",
    "check:config": "tsx scripts/check-config.ts",
    "e2e": "tsx scripts/e2e-test.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/chai": "^4.3.20",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "axios": "^1.6.5",
    "chai": "^4.5.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "eslint-plugin-boundaries": "^5.3.1",
    "ethers": "^6.10.0",
    "hardhat": "^2.22.18",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "tsx": "^4.21.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
