{
  "name": "@snowrail/yuki",
  "version": "2.0.0",
  "description": "YUKI - AI Assistant for SnowRail Treasury",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@snowrail/sentinel": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "keywords": ["yuki", "ai", "assistant", "snowrail", "treasury", "payments"],
  "author": "Colombia Blockchain <team@snowrail.xyz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Colombia-Blockchain/SnowRail",
    "directory": "packages/yuki"
  }
}
